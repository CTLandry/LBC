<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DefineConstants>TRACE;DEBUG;NETSTANDARD;NETSTANDARD2_0;DEV</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType></DebugType>
    <DefineConstants>TRACE;RELEASE;NETSTANDARD;NETSTANDARD2_0;PROD</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="4.6.0.772" />  
    <PackageReference Include="Xamarin.Essentials" Version="1.5.3.2" />
    <PackageReference Include="TinyIoC" Version="1.3.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.AppCenter" Version="3.2.1" />
    <PackageReference Include="Microsoft.AppCenter.Crashes" Version="3.2.1" />
    <PackageReference Include="Microsoft.AppCenter.Analytics" Version="3.2.1" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Models\" />
    <Folder Include="Models\Base\" />
    <Folder Include="ViewModels\Base\" />
    <Folder Include="Data\" />
    <Folder Include="TinyIoC\" />
    <Folder Include="Services\" />
    <Folder Include="Views\" />
    <Folder Include="Services\SocialAuth\" />
    <Folder Include="Infrastructure\" />
    <Folder Include="Infrastructure\Exception\" />
    <Folder Include="Infrastructure\Result\" />
    <Folder Include="Infrastructure\Logging\" />
    <Folder Include="Domain\" />
    <Folder Include="Domain\SocialAuth\" />
    <Folder Include="Domain\SocialAuth\Exceptions\" />
    <Folder Include="Domain\SocialAuth\Results\" />
    <Folder Include="Domain\Base\" />
    <Folder Include="Domain\SocialAuth\Logic\" />
    <Folder Include="Configuration\" />
    <Folder Include="Configuration\Settings\" />
    <Folder Include="Configuration\Configs\" />
    <Folder Include="Domain\Session\" />
    <Folder Include="Services\Session\" />
    <Folder Include="Domain\Session\Exceptions\" />
    <Folder Include="Domain\Session\Logic\" />
    <Folder Include="Domain\Session\Results\" />
    <Folder Include="Infrastructure\Logic\" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Configuration\Configs\config-dev.json" />
    <None Remove="Configuration\Configs\config-prod.json" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Configuration\Configs\config-dev.json" />
    <EmbeddedResource Include="Configuration\Configs\config-prod.json" />
  </ItemGroup>
</Project>